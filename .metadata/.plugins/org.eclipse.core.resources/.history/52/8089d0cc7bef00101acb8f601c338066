package com.example.OneToMany.fileHandling;

import com.example.OneToMany.entity.Department;
import com.example.OneToMany.service.DepartmentService;
import org.springframework.stereotype.Component;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.List;

@Component
public class ExcelFileHandler {

    private final DepartmentService departmentService;

    public ExcelFileHandler(DepartmentService departmentService) {
        this.departmentService = departmentService;
    }

    public void writeDepartmentsToExcel() {
        // Absolute path to make it easy to find
        String filePath = "C:/Users/hp/Desktop/departments.csv";

        List<Department> departments = departmentService.getAllDepartments();

        File file = new File(filePath);

        try (FileWriter writer = new FileWriter(file)) {
            // Write header row
            writer.append("ID,Name\n");

            // Write data rows
            for (Department dept : departments) {
                writer.append(dept.getId().toString())
                        .append(",")
                        .append(dept.getName())
                        .append("\n");
            }

            System.out.println("Excel/CSV file created successfully at: " + filePath);

        } catch (IOException e) {
            System.out.println("Error writing Excel/CSV file: " + e.getMessage());
        }
    }
}

